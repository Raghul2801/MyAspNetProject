@model MyFirstPro.Models.Product

<h2>Delete Product</h2>
<p>Are you sure you want to delete this product?</p>
<p>
    <strong>@Model.Name</strong> (Quantity: @Model.Quantity)
</p>
@using (Html.BeginForm("DeleteConfirmed", "Product", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id) <!-- This will pass the product Id to the DeleteConfirmed method -->
    <input type="submit" value="Delete" />
}
